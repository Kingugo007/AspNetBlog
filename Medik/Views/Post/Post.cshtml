@model PostViewModel
@{
    ViewData["Data"] = "Add Post";
    ViewBag.Identity = Model.Identity;
}

<div class="post-wrapper">
<h1>Share your mdedical tips</h1>
<div class="post-container">
    <form enctype="multipart/form-data" method="post" asp-action="Post" asp-controller="Post" class="post-form">
    <div asp-validation-summary="All" style="color: red"></div>
      <div class="upload-img post-items">
            <p>Upload Image</p>
            <input asp-for="Photo"  class="custom-file"/>
      </div>
      <div class="post-items">
          <p>Title</p>
          <input asp-for="Title" class="post-title" /> 
      </div>
      <div class="post-items">
          <p>Content</p>
          <textarea asp-for="Content" class="post-content"></textarea>
          <span asp-validation-for="Content" style="color: red"></span>
      </div>
   
        <div>
            <input type="submit" value="Upload" class="form-btn"/>
        </div> 
</form>
</div>

</div>

}