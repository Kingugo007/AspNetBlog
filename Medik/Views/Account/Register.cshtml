@model Medik.Core.ViewModel.RegisterViewModel
@{
	ViewData["Title"] = "Create Account";
}
<section class="form-wrapper">
    <div class="form-wrapper-heading">
        <h1>Register</h1>
    </div> 
    <div class="form-container">
        <form asp-action="Register" asp-controller="Account" method="post">
           <div asp-validation-summary="ModelOnly" style="color: red; margin-left: 10px"></div>
            <div class="form-items">
                <p>Frist Name</p>
                <input asp-for="FirstName" class="form-input" />
                <p><span asp-validation-for="FirstName" style="color: red; font-size: 12px;"></span></p>
                </div>
            <div class="form-items"> 
                <p>Last Name</p>
                <input asp-for="LastName" class="form-input" />
                <p><span asp-validation-for="LastName" style="color: red; font-size: 12px;"></span></p>
                 </div>
            <div class="form-items">
                <p>Email</p>
                <input asp-for="Email" class="form-input" />
                <p><span asp-validation-for="Email" style="color: red; font-size: 12px;"></span></p>
            </div>       
            <div class="form-items">
                <p>Password</p>
                <input asp-for="Password" class="form-input" />
                <p><span asp-validation-for="Password" style="color: red; font-size: 12px;"></span></p>
             </div>
             <div class="form-items">
                <p>Confirm password</p>
                <input asp-for="ConfirmPassword" class="form-input" />
                <p><span asp-validation-for="ConfirmPassword" style="color: red; font-size: 12px;"></span></p>
                </div>
            <div class="form-items">
                <input type="submit" value="Register" class="form-btn"/>
            </div>          
     </form>
    </div>
</section>
